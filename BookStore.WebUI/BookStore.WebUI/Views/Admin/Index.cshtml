@model IEnumerable<BookStore.Domain.Entities.Book>

@{
    ViewBag.Title = "Admin-All Books";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Admin Menu Start-->

<div class="navbar navbar-inverse" role="navigation">

    <div class="container-fluid">
        <div class="navbar-header d-flex col">
            <a class="navbar-brand" href="#"><i class="fa fa-adjust"></i>Admin<b>Page</b></a>
        </div>


        <ul class="nav navbar-nav">
            <li>
                <a href="@Url.Action("List", null, new { area = string.Empty, controller = "Book" },
                Request.Url.Scheme)">BookStore-Home</a>
            </li>

        </ul>


        <form class="navbar-form navbar-left" action="" method="post">
            <div class="form-group">
                <input type="text" class="form-control" id="searchValue" name="searchValue" placeholder="Search For Book">
            </div>
            <input type="submit" class="btn btn-default" value="Search" />

        </form>


        </div>
    </div>

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3>List Of Books</h3>
    </div>
</div>

    <!-- Admin Menu End -->


    <div class="panel-body">
        <table class="table table-hover table-bordered">
            <tr>
                <th class="text-center">
                    ID
                </th>
                <th>
                    Title
                </th>

                <th class="text-center">
                    Price
                </th>
                <th class="text-center">
                    Category
                </th>
                <th class="text-center">Operations</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td>
                        @Html.ActionLink(item.Title, "Edit", new { item.ISBN })

                    </td>

                    <td class="text-center">
                        @item.Price.ToString("c")
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Specialization)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Delete", "Delete", new { item.ISBN }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }

        </table>


    </div>

    <div class="panel-footer">
        @Html.ActionLink("Add New Book", "Create", null, new { @class = "btn btn-success btn-lg" })

    </div>

  
         
 