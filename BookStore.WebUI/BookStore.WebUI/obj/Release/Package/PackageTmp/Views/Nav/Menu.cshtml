
@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Book", null, new { @class= "btn btn-block btn-default btn-lg" })

@foreach (var Link in Model)
{
    @Html.RouteLink(Link, new { controller = "Book", action = "List", specilization = Link, pageno = 1 },
    new { @class = "btn btn-block btn-default btn-lg " + ((Link == ViewBag.SelectedSpec) ? "btn-primary" : "").ToString() })
}






